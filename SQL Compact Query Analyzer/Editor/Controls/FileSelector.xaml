<UserControl x:Class="Hardcodet.Wpf.Toolbox.Controls.Files.FileSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Border BorderBrush="#FF919191"
          BorderThickness="1">
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="40" />
      </Grid.ColumnDefinitions>


      <TextBlock Name="txtFileName"
                 Margin="4,0,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center"
                 Grid.Column="0" />
      
      <Button Name="btnBrowse"
              Click="btnBrowse_Click"
              Opacity="0.8"
              HorizontalContentAlignment="Center"
              ToolTip="Click to open file browser."
              Margin="4,0,1,1"
              Width="40"
              Padding="0"
              Grid.Column="1">
        <Image Source="/QueryAnalyzer;component/Resources/Browse.png" Width="16" Height="16" />
      </Button>
  </Grid>
  </Border>
</UserControl>
